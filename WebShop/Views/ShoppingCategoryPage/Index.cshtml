@model ShoppingCategoryPageViewModel

@{
    Layout = "~/Views/Shared/Layouts/_TwoPlusOne.cshtml";
}
<div class="alert alert-success fade in">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    <strong>Success!</strong> @TempData["successmessage"]
</div>

<div class="row">
    <p>Shopping category page</p>
</div>
<div class="row">
    @foreach (var item in Model.ShoppingCategoryPages)
    {
        <div class="span4">
            <h2><a href="@item.LinkURL">@item.Name</a> </h2>
            @if (item.MainProductImage != null)
            {
                <a href="@item.LinkURL"> <img src="@Url.ContentUrl(item.MainProductImage)" alt="Image" /> </a>
            }
            else
            {
                <a href="@item.LinkURL">
                    <img src="~/Static/img/nopreviewavailable.png" height="300" alt=""/>
                </a>
            }
            <hr />
        </div>
    }
</div>

<div class="row">
    @foreach (var item in Model.ShoppingPages)
    {
        <p>Shoping page</p>
        <div class="span4">
            <div class="media">
                <div class="mediaImg">
                    <h2>
                        <a href="@item.LinkURL">@item.Name</a>
                    </h2>
                    <hr />
                    @if (item.ProductImage != null)
                    {
                        <a href="@item.LinkURL"><img src="@Url.ContentUrl(item.ProductImage)" alt="" /></a>
                    }
                    else
                    {
                        <a href="@item.LinkURL">
                            <img src="~/Static/img/nopreviewavailable.png" height="300" alt="" />
                        </a>
                    }
                    <h3>Pris:  @item.ProductPriceFor</h3>
                </div>
            </div>
        </div>
    }
</div>



